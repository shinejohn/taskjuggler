{
  "name": "TaskJuggler Mobile (Expo)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "postCreateCommand": "npm install",
  "postStartCommand": "npx expo start --tunnel",
  
  "forwardPorts": [8081, 19000, 19001, 19002],
  "portsAttributes": {
    "8081": {
      "label": "Metro Bundler"
    },
    "19000": {
      "label": "Expo Dev Server"
    },
    "19001": {
      "label": "Expo Packager"
    },
    "19002": {
      "label": "Expo DevTools",
      "onAutoForward": "openBrowser"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dsznajder.es7-react-js-snippets",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "msjsdiag.vscode-react-native"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },

  "remoteEnv": {
    "EXPO_PUBLIC_API_URL": "${localEnv:EXPO_PUBLIC_API_URL:https://api.fibonacci.railway.app}",
    "EXPO_PUBLIC_APP_NAME": "TaskJuggler"
  }
}
