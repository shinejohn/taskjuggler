{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build -w shared-ui && npm run build -w scanner-web",
        "startCommand": "npm run start -w scanner-web",
        "watchPaths": [
            "scanner-web/**",
            "shared-ui/**"
        ]
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
