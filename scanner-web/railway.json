{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install --workspaces && npm run build --workspace=shared-ui && npm run build --workspace=scanner-web",
        "startCommand": "npm run start --workspace=scanner-web"
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
